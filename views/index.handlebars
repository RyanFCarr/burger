<div class="container">

	<div class="text-center">
		<img src="/assets/img/burger-hd.png" class="img-fluid pt-3" alt="Responsive image">
		<h1>Eat-Da-Burger!</h1>
	</div>
	<hr>

	<div class="div1 text-center">
		<h2>Add a Burger...</h2>
		<p>Enter a burger you want to eat and click the "Submit" button</p>
		<form class="create-form">

			<div class="form-group">
				<label for="bn">Burger Name:</label>
				<input type="text" id="bn" name="burger_name">
				<button type="submit">Submit</button>
			</div>

		</form>
		<hr>
	</div>


	<div class="row">
		<div class="col-5">
			<div class="card not-devoured">
				<div class="card-header font-weight-bold">Non-Devoured Burgers</div>
				<ul class="list-group list-group-flush">
					{{#each burgers}}
						{{#unless devoured}}
							<li class="list-group-item">{{burger_name}}</li>
						{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="col-2">
			<div class="row justify-content-center mt-5 pt-3">
				<button>Devour!</button>
			</div>
		</div>
			

		<div class="col-5">
			<div class="card devoured">
				<div class="card-header font-weight-bold">Devoured Burgers</div>
				<ul class="list-group list-group-flush">
					{{#each burgers}}
						{{#if devoured}}
							<li class="list-group-item">{{burger_name}}</li>
						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>

</div>